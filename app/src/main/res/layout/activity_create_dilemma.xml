<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.grp13.dilemma.CreateDilemma">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText android:id="@+id/dilemmaName" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="Dilemma titel"
                android:imeOptions="actionUnspecified" android:inputType="textCapSentences"
                android:maxLines="1" android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText android:id="@+id/dilemmaDesc" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="Dilemma beskrivelse"
                android:imeOptions="actionUnspecified" android:inputType="textMultiLine"
                android:maxLines="100" android:singleLine="false" />

        </android.support.design.widget.TextInputLayout>

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gravityPicker"
            android:layout_gravity="center_horizontal"
             />


    </LinearLayout>

</RelativeLayout>
